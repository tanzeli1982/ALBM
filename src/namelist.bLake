&general
 run_mode = 'regular'
 lake_file = './Lakes_E3SM.nc'
 lake_range = 1, 106 
 bathy_file = './Lakes_E3SM_bathymetry.nc'
 opt_file = ''
/

&simulation
 Thermal_Module = .True.
 Bubble_Module = .True.
 Diagenesis_Module = .True.
 Carbon_Module = .True.
 Start_Year = 1901
 Start_Month = 1
 Start_Day = 1
 End_Year = 2020
 End_Month = 1
 End_Day = 1
 Spinup_Month = 7
 Spinup_Day = 1
 nSpinup = 2
 Use_Leap = .False.
/

&resolution
 NWLAYER = 50
 NSLAYER = 40
 NRLAYER = 10
 NSCOL = 5
/

&bayesian
